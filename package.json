{
  "main": "node_modules/expo/AppEntry.js",
  "scripts": {
    "start": "expo start",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "eject": "expo eject",
    "eslint": "eslint \"**/*.js\"",
    "format": "prettier-eslint \"**/*.js\" --write",
    "rndebugger": "open \"rndebugger://set-debugger-loc?host=localhost&port=19001\"",
    "e2e": "detox test",
    "test": "jest component"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && yarn test && yarn e2e"
    }
  },
  "lint-staged": {
    "*.js": [
      "yarn format",
      "yarn eslint",
      "git add"
    ]
  },
  "detox": {
    "test-runner": "jest",
    "runner-config": "e2e/config.json",
    "configurations": {
      "ios.sim": {
        "binaryPath": "bin/Exponent.app",
        "type": "ios.simulator",
        "name": "iPhone 8"
      }
    }
  },
  "jest": {
    "preset": "jest-expo"
  },
  "dependencies": {
    "@expo/vector-icons": "^9.0.0",
    "expo": "^32.0.0",
    "native-base": "^2.10.0",
    "prop-types": "^15.6.2",
    "react": "16.5.0",
    "react-native": "https://github.com/expo/react-native/archive/sdk-32.0.0.tar.gz",
    "react-navigation": "^3.0.9",
    "react-redux": "^6.0.0",
    "redux": "^4.0.1",
    "redux-devtools-extension": "^2.13.8",
    "redux-persist": "^5.10.0",
    "redux-starter-kit": "^0.4.3"
  },
  "devDependencies": {
    "@storybook/addon-knobs": "^4.1.11",
    "@storybook/addon-ondevice-knobs": "^4.1.11",
    "@storybook/addon-ondevice-notes": "^4.1.11",
    "@storybook/react-native": "^4.1.11",
    "babel-preset-expo": "^5.0.0",
    "detox": "^10.0.5",
    "detox-expo-helpers": "^0.6.0",
    "eslint": "^5.13.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jest": "^22.2.2",
    "eslint-plugin-jsx-a11y": "^6.2.0",
    "eslint-plugin-react": "^7.12.4",
    "expo-detox-hook": "^1.0.10",
    "husky": "^1.3.1",
    "jest-expo": "^32.0.0",
    "lint-staged": "^8.1.3",
    "prettier-eslint-cli": "^4.7.1",
    "react-native-testing-library": "^1.5.0"
  },
  "private": true
}
